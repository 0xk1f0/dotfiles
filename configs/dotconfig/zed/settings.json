{
    "theme": {
        "mode": "dark",
        "light": "Catppuccin Mocha",
        "dark": "Catppuccin Mocha"
    },
    "icon_theme": "Catppuccin Mocha",
    "features": {
        "edit_prediction_provider": "none"
    },
    "base_keymap": "VSCode",
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "format_on_save": "off",
    "use_autoclose": true,
    "hard_tabs": false,
    "tab_size": 4,
    "buffer_font_size": 17.0,
    "buffer_font_weight": 400,
    "buffer_font_family": "Monaspace Neon",
    "buffer_font_features": {
        "liga": true,
        "calt": true
    },
    "ui_font_size": 17.0,
    "ui_font_family": "Open Sans",
    "ui_font_weight": 300,
    "ui_font_features": {
        "liga": true,
        "calt": true
    },
    "terminal": {
        "font_family": "Monaspace Neon",
        "font_size": 17.0,
        "font_features": {
            "liga": true,
            "calt": true
        }
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
        "background_coloring": "disabled"
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": true
    },
    "journal": {
        "hour_format": "hour24"
    }
}
