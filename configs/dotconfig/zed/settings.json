{
    "features": {
        "inline_completion_provider": "none"
    },
    "base_keymap": "VSCode",
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "tab_size": 4,
    "ui_font_size": 17,
    "buffer_font_size": 17,
    "buffer_font_family": "Monaspace Neon",
    "buffer_font_features": {
        "liga": true,
        "calt": true
    },
    "ui_font_family": "OpenSans-Regular",
    "terminal": {
        "font_family": "Monaspace Neon",
        "font_features": {
            "liga": true,
            "calt": false
        }
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
        "background_coloring": "disabled"
    },
    "hour_format": "hour24",
    "telemetry": {
        "diagnostics": false,
        "metrics": true
    },
    "theme": {
        "mode": "dark",
        "light": "Ayu Light",
        "dark": "Ayu Dark"
    },
    "languages": {
        "Python": {
            "formatter": { "language_server": { "name": "ruff" } }
        }
    },
    "lsp": {
        "pyright": {
            "settings": {
                "python": {
                    "pythonPath": ".venv/bin/python"
                }
            }
        }
    }
}
