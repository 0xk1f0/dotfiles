        :space-evenly "true"
        :spacing 14
        :orientation "h"
        :halign "fill"
        :class "system"
        (button
            :class "network"
            :onclick ""
            :style "background-color: ${NET_STATE == 'connected' ? STATE_NRM : ''};"
