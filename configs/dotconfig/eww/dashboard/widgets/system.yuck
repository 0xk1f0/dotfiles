        (button
            :class "bluetooth"
            :onclick "/home/$USER/.config/eww/scripts/ble.sh toggle"
            :style "background-color: ${BLE_STATE == 'no' ? '' : STATE_NRM};"
            "ïŠ“"
        )
    )
)
