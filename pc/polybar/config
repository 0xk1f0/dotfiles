[bar/main-hlwm]
monitor = DisplayPort-1

width = 98.8%
height = 30
#border-size = 1
#border-color = ${colors.colorBorder}
offset-x = 0.6%
offset-y = 10
#radius = 10
fixed-center = true

background = #00000000
foreground = ${colors.colorForeground}

#override-redirect = true

module-margin-left = 0
module-margin-right = 0
modules-left = ewmh weather
modules-center = date
modules-right = cpu memory pihole-polybar powermenu

font-0 = Open Sans:size=13:style=Semibold;2
font-1 = Weather Icons:size=12;1
font-2 = octicons:style=Medium
font-3 = Twemoji:style=Regular
font-4 = Roboto:style=Medium;2
font-5 = FontAwesome:size=13:style=Regular;2
font-6 = SourceCodePro:size=13:style=Regular;2

