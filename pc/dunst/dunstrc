[global]
    # monitor choice
    monitor = 0

    # notification follows mouse
    # follow = mouse

    # geometry
    width = 300
    #height = 180
    origin = top-center
    offset = 0x32
    scale = 0

    # max number of notification
    notification_limit = 5

    # show progress bar
    progress_bar = true

    # progress bar geometry
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    # show currently hidden messages
    indicate_hidden = yes

    # transparency    
    transparency = 0

    # seperator line
    separator_height = 0

    # text-seperator padding
    padding = 10

    # horizontal padding
    horizontal_padding = 10

    # text-icon padding.
    text_icon_padding = 0

    # seperator color
    separator_color = frame

    # sort by urgency.
    sort = yes

    # font
    font = Open Sans Semibold 11

    # line spacing
    line_height = 0

    # markup
    markup = full
    format = "<b>%s</b>\n%b"

    # text alignment
    alignment = left
    vertical_alignment = center

    # show age of messages
    show_age_threshold = 60

    # ellipsis for long lines
    ellipsize = middle

    # ignore newlines
    ignore_newline = no

    # stack notifications with the same content
    stack_duplicates = true

    # hide count of stacked notifications with same content
    hide_duplicate_count = false

    # indicators for URLs
    show_indicators = yes

    # icons position
    icon_position = left
    
    # icon size
    min_icon_size = 0
    max_icon_size = 32

    # default icon path.
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    # notification from history be sticky or timeout like normal
    sticky_history = yes

    # max notifications kept in history
    history_length = 10

    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:

    # browser for opening urls in context menu.
    browser = /usr/bin/xdg-open

    # always run rule-defined scripts
    always_run_script = true

    # window title spawned by dunst
    title = Dunst

    # window class spawned by dunst
    class = Dunst

    # corner radius
    corner_radius = 0

    # ignore the dbus closeNotification message.
    ignore_dbusclose = false

    # compatibility
    force_xwayland = false
    force_xinerama = false

    # mouse behaviour
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    # frame
    frame_color = "#485068"
    frame_width = 2

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "#101818"
    foreground = "#7888a0"
    timeout = 3

[urgency_normal]
    background = "#101818"
    foreground = "#7888a0"
    timeout = 5

[urgency_critical]
    background = "#000000"
    foreground = "#ff0000"
    frame_color = "#ff0000"
    timeout = 10

[fullscreen_delay_everything]
    fullscreen = delay

[fullscreen_show_critical]
    msg_urgency = critical
    fullscreen = show

