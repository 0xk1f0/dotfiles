ramp-signal-2 = ðŸ˜’
ramp-signal-3 = ðŸ˜Š
ramp-signal-4 = ðŸ˜ƒ
ramp-signal-5 = ðŸ˜ˆ

###########################################################

[module/date]
type = internal/date
interval = 1

date = "%d. "
date-alt = "%d.%m.%Y"

time = %H:%M
time-alt = %H:%M:%S

format-underline = ${colors.colorUnderlineNormal}

label = %date% %time%

###########################################################

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 1
format-discharging-underline = ${colors.colorUnderlineNormal}
format-charging-underline = ${colors.colorUnderlineNormal}

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = chr %percentage%% @ %consumption%W

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = dsc %percentage%%

###########################################################

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 2
format-underline = ${colors.colorUnderlineNormal}

label-open = pwr >
label-close = pwr <
label-separator = /

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = sleep
menu-0-2-exec = menu-open-3

menu-1-1 = cancel
menu-1-1-exec = menu-open-0
menu-1-0 = %{F#ff0000}reboot%{F-}
menu-1-0-exec = reboot

menu-2-0 = %{F#ff0000}power off%{F-}
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = %{F#ff0000}sleep%{F-}
menu-3-0-exec = systemctl suspend && betterlockscreen -l
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

###########################################################

[module/ewmh]
type = internal/xworkspaces

pin-workspaces = false
enable-click = true
enable-scroll = false
reverse-scroll = false

icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
format = <label-state>
label-monitor = %name%

label-active = %name%
label-active-underline= ${colors.colorUnderlineNormal}
label-active-padding = 2

label-occupied = %name%o
label-occupied-padding = 2

label-urgent = %name%
label-urgent-underline = ${colors.colorUnderlineAlt}
label-urgent-padding = 2

label-empty = %name%e
label-empty-padding = 2

###########################################################

[module/xwindow]
type = internal/xwindow

label = %title%
label-underline = ${colors.colorUnderlineNormal}
label-maxlen = 30

##########################################################

[settings]
screenchange-reload = true
pseudo-transparency = true

