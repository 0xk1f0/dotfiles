[bar/main-hlwm]
monitor = eDP
width = 98.8%
height = 28
padding = 2
border-size = 2
border-color = #ffffff
offset-x = 0.6%
offset-y = 0.6%
radius = 0.0
fixed-center = true
bottom = false
separator =

background = ${colors.colorBackground}
foreground = ${colors.colorForeground}

override-redirect = true

module-margin-left = 2
module-margin-right = 2

line-size = 2

modules-left = ewmh xwindow
modules-center = date
modules-right = cpu memory filesystem network battery powermenu

font-0 = OpenSans-Regular.ttf: Open Sans:style=Regular
font-1 = awesome-terminal-fonts/pomicons-regular.ttf: Pomodoro:style=Regular
font-2 = awesome-terminal-fonts/fontawesome-regular.ttf: FontAwesome:style=Regular
font-3 = awesome-terminal-fonts/devicons-regular.ttf: icomoon:style=Regular
font-4 = awesome-terminal-fonts/octicons-regular.ttf: octicons:style=Medium
font-5 = awesome-terminal-fonts/programming-languages.ttf: Programming\-Languages:style=Regular


label-font = 0

###########################################################
###########################################################
###########################################################

[colors]
colorUnderlineNormal = #ffffff
colorUnderlineAlt = #00ff00
colorBackground = #302550
colorForeground = #ffffff

###########################################################

[module/filesystem]
type = internal/fs
interval = 30

mount-0 = /

;format-mounted-underline = ${colors.colorUnderlineNormal}
label-mounted = %mountpoint%: %percentage_used%% usd
;format-unmounted-underline = ${colors.colorUnderlineAlt}
label-unmounted = %mountpoint% umtd

###########################################################

[module/cpu]
type = internal/cpu
interval = 2
format-underline = ${colors.colorUnderlineNormal}
label = cpu: %percentage%% utl

###########################################################

[module/memory]
type = internal/memory
interval = 2
format-underline = ${colors.colorUnderlineNormal}
label = memory: %percentage_used%% usd

###########################################################

[module/network]
type = internal/network
; Name of the network interface to display. You can get the names of the
; interfaces on your machine with `ip link`
; Wireless interfaces often start with `wl` and ethernet interface with `eno` or `eth`
interface = wlo1

; Seconds to sleep between updates
; Default: 1
interval = 3.0

; Accumulate values from all interfaces
; when querying for up/downspeed rate
; Default: false
accumulate-stats = false

; Consider an `UNKNOWN` interface state as up.
; Some devices like USB network adapters have 
; an unknown state, even when they're running
; Default: false
unknown-as-up = false

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected> <ramp-signal>
format-connected-underline = ${colors.colorUnderlineNormal}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.colorUnderlineAlt}

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <label-packetloss>
format-packetloss-underline = ${colors.colorUnderlineAlt}

; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]

; Default: %ifname% %local_ip%
label-connected = %ifname% con @ %essid%

label-disconnected = %ifname% dsc

label-packetloss = %ifname% pktlss

